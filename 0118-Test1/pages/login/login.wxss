/*容器样式*/
.container{
  height: 5s0vh;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
/*文本样式*/
text{
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}

/*输入框样式*/
input{
  border: 2rpx solid #000000;
  width: 100%;
  height: 100rpx;
  border-radius: 12rpx;
  padding-left: 16rpx;
}

/*输入手机号字体样式*/
.phone_number{
  margin:60rpx ;
}
/*验证码样式*/
.code{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 16rpx;
}

/*输入验证码样式*/
.code_number{
  flex-wrap: nowrap;
  margin-right: 40rpx;
}

/*获取验证码按钮样式*/
.btn_code{
  background-color: #2EB857;
  color: white;
  font-size: 32rpx;
  padding-left: 0rpx;
  padding-right: 0rpx;
  font-display: center;
  margin-left: 20rpx;
  
}

/*登录按钮样式*/
.btn_login{
  margin: 100rpx;
  background-color: #2EB857;
  color: white;
  font-size: 36rpx;
}